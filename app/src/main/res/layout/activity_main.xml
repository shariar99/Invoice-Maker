
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/nameText"
        android:layout_width="379dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:background="#7AC129"
        android:backgroundTint="#2196F3"
        android:ems="10"
        android:hint="  Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numberText"
        android:layout_width="380dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:background="#ffff"
        android:backgroundTint="#4CAF50"
        android:ems="10"
        android:hint="  Number"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <TextView
        android:id="@+id/itemOne"
        android:layout_width="53dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#F44336"
        android:text="Item 1"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberText" />

    <TextView
        android:id="@+id/itemTwo"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:backgroundTint="#F44336"
        android:text="Item 2"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemOne" />

    <Spinner
        android:id="@+id/spinnerOne"
        android:layout_width="133dp"
        android:layout_height="34dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:backgroundTint="#CDDC39"
        android:entries="@array/pizza_menu"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/itemOne"
        app:layout_constraintTop_toBottomOf="@+id/numberText" />

    <Spinner
        android:id="@+id/spinnerTwo"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:backgroundTint="#CDDC39"
        android:entries="@array/pizza_menu"
        app:layout_constraintStart_toEndOf="@+id/itemTwo"
        app:layout_constraintTop_toBottomOf="@+id/spinnerOne" />

    <EditText
        android:id="@+id/itemNumberOne"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="#E4D4D4"
        android:backgroundTint="#E91E63"
        android:ems="10"
        android:hint="2"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toEndOf="@+id/spinnerOne"
        app:layout_constraintTop_toBottomOf="@+id/numberText" />

    <EditText
        android:id="@+id/itemNumberTwo"
        android:layout_width="77dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:background="#C5B4B4"
        android:backgroundTint="#E91E63"
        android:ems="10"
        android:hint="2"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toEndOf="@+id/spinnerTwo"
        app:layout_constraintTop_toBottomOf="@+id/itemNumberOne" />

    <Button
        android:id="@+id/generateBTN"
        android:layout_width="297dp"
        android:layout_height="63dp"
        android:backgroundTint="#03A9F4"
        android:text="Generate Invoice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTwo"
        app:layout_constraintVertical_bias="0.144" />


</androidx.constraintlayout.widget.ConstraintLayout>